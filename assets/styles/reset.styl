@require 'defaults'

*,
*::before, 
*::after
  box-sizing: border-box

*
  margin: 0
  padding: 0
  font: inherit

html
  // implement light and dark mode later
  // color-scheme: light dark

body
  min-height: 100vh
  text-rendering: optimizeSpeed

a[href]:not([class])
  text-decoration: underline
  text-decoration-skip-ink: auto

img, picture, svg, video
  display: block
  max-width: 100%